
   
    <%= render 'form' %>

    <h1>Product Wishlist</h1>
    <div id="product-list">
      <ul>
        <% @products.each do |product| %>
        <li>
          <a class="expand">
          <div class="right-arrow">+</div>
          <div class="img_url"><img src="<%= product.img_url %>"></div>
          <div class="large-5 columns">
          <h3><%= product.name %></h3>
          </div>
          <div class="price-container">
          <div class="current-price columns>"
          <span>$<%= product.price %></span>
          </div>
          <div class="reg-price columns">
          <span>$<%= product.regPrice %></span>
          </div>
          </div>
          </a>
          
          <div class="detail">
            <div><span><%= product.description %></span></div><br/>
            
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          
           <% end %>
          </li>
          
      </ul>
     </div>
    </div>

<br>


