
   
    <%= render 'form' %>
    
    <h1>Product Wishlist</h1>
    <div id="product-list">
      <ul>
        <% @wishlists.each do |item| %>
        <li>
          <a class="expand">
          <div class="right-arrow">+</div>
          <div class="img_url"><img src="<%= item.product.img_url %>"></div>
          <div class="large-5 columns">
          <h3><%= item.product.name %></h3>
          </div>
          <div class="price-container">
          <div class="current-price columns>"
          <span>$<%= item.product.price %></span>
          </div>
          <div class="reg-price columns">
          <span>$<%= item.product.regPrice %></span>
          </div>
          </div>
          </a>
          
          <div class="detail">
            <div><span><%= item.product.description %></span></div><br/>
            <div id="delete-item">
              <%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
          
           <% end %>
          </li>
          
      </ul>
     </div>
    </div>

<br>


